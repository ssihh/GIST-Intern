import time
import shutil #셸 유티리티
import threading
import random

#파일복사
src1 = './dsttest/out.png'
c = 1

def copy_test(src):
    shutil.copy(src, './dsttest/out{0}.png'.format(c)) #파일의 내용과 파일의 권한만 복사

works = [x for x in range(9)]
thread_count = 3
threads = []

if __name__ == "__main__":
    start_time = time.time()
    for i in range(9):
        copy_test(src1)
        c +=1

    for i in range(thread_count):
        thread = threading.Thread(target=copy_test(src1), args=(works[i*3: (i+1)*3],), )
        thread.start()
        threads.append(thread)

    for thread in threads:
        thread.join()

    print("--- elapsed time %s seconds ---" % (time.time() - start_time))


import time
import shutil #셸 유티리티
import threading
import os

#파일복사
path = './dsttest/'

def copy_test():
    file_list = os.listdir(path)
    file_list_log = [file for file in file_list if file.startswith("o")]
    c = len(file_list_log)
    shutil.copy('./dsttest/out.png', './dsttest/out{0}.png'.format(c))

if __name__ == "__main__":
    start_time = time.time()
    for i in range(3):
        copy_test()
        print("dmd")

    print("--- elapsed time %s seconds ---" % (time.time() - start_time))
